{
  "name": "husky-prettier-stylelint-test",
  "description": "husky-prettier-stylelint-test",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/coliff/husky-prettier-stylelint-test/",
  "author": "C.Oliff",
  "devDependencies": {
    "@babel/register": "^7.4.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "del": "^4.1.1",
    "gulp": "3.9.1",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0"
  },
  "browserslist": [
    "defaults"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "ignore": ["*.min.js, *.min.css"]
  }
}
