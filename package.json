{
  "name": "stylelint-testing",
  "description": "Bootstrap 4 for IE8",
  "version": "4.3.1",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/coliff/bootstrap-ie8/",
  "author": "C.Oliff",
  "devDependencies": {
    "@babel/register": "^7.4.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "del": "^4.1.1",
    "gulp": "3.9.1",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-cssimport": "^7.0.0",
    "gulp-header": "^2.0.7",
    "gulp-load-plugins": "^1.6.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0"
  },
  "scripts": {
    "fix:other": "npm run prettier --write",
    "fix:js": "npm run test:js --fix",
    "fix": "npm run fix:js && npm run fix:other",
    "prettier": "prettier \"**/*.{json,md,scss,yaml,yml}\"",
    "test:other": "npm run prettier --list-different",
    "test:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .js,.jsx .",
    "test": "npm run test:other && npm run test:js"
  },
  "browserslist": [
    "defaults"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}
